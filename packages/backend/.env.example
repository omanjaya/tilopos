# Database
DATABASE_URL="postgresql://tilopos:tilopos_secret@localhost:5432/tilopos?schema=public"

# Application
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-jwt-secret-change-this
JWT_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ (optional â€” falls back to RxJS event bus if not configured)
RABBITMQ_URL=amqp://tilo:tilopass@localhost:5672
RABBITMQ_EXCHANGE=tilo.events
RABBITMQ_QUEUE_PREFIX=tilo
RABBITMQ_RETRY_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=5000

# CORS (comma-separated origins, never use *)
CORS_ORIGIN=http://localhost:5173

# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@tilopos.com

# WhatsApp (Fonnte)
WHATSAPP_API_URL=https://api.fonnte.com/send
WHATSAPP_API_TOKEN=

# Payment Gateway
PAYMENT_GATEWAY=mock
MIDTRANS_SERVER_KEY=
MIDTRANS_ENV=sandbox
XENDIT_API_KEY=

# S3 Storage (optional - defaults to local storage)
S3_BUCKET=tilopos-uploads
S3_REGION=ap-southeast-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Backup
BACKUP_DIR=/var/backups/tilopos

# ELK Stack (optional - logs to console only if not configured)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=tilo-logs
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000
LOG_LEVEL=info
SERVICE_NAME=tilo-backend

# CDN (optional - serves assets from app server if not configured)
CDN_URL=
CDN_PROVIDER=cloudflare
